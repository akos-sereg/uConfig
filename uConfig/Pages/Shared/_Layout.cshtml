<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>uConfy</title>
    <link href="~/lib/bootstrap.min.css" rel="stylesheet">
    <link href="~/lib/toastr.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />

    <script src="~/js/ui/app.js" asp-append-version="true"></script>
    <script src="~/js/ui/forms/add-device-form.js" asp-append-version="true"></script>
    <script src="~/js/ui/forms/update-device-form.js" asp-append-version="true"></script>
    <script src="~/js/ui/forms/add-config-item-form.js" asp-append-version="true"></script>
    <script src="~/js/ui/lists/registered-device-list.js" asp-append-version="true"></script>
    <script src="~/js/ui/screens/screen-handler.js" asp-append-version="true"></script>
    <script src="~/js/ui/screens/login-screen.js" asp-append-version="true"></script>
    <script src="~/js/ui/screens/devices-screen.js" asp-append-version="true"></script>
    <script src="~/js/ui/screens/configuration-screen.js" asp-append-version="true"></script>
    <script src="~/js/ui/components/tab-pages.js" asp-append-version="true"></script>
    <script src="~/js/services/backend-service.js" asp-append-version="true"></script>
</head>
<body>
    <body>

        @RenderBody()
        

        <!-- Bootstrap core JavaScript
    ================================================== -->
        <!-- Placed at the end of the document so the pages load faster -->
        <script src="~/lib/jquery.min.js" crossorigin="anonymous"></script>
        <script src="~/lib/jquery-ui.min.js" crossorigin="anonymous"></script>
        <script src="~/lib/popper.min.js"></script>
        <script src="~/lib/bootstrap.min.js"></script>
        <script src="~/lib/toastr.min.js"></script>

        <!-- Icons -->
        <script src="~/lib/feather.min.js"></script>
        <script>
            feather.replace()
        </script>


        <script>
            $(document).ready(function () {
                if (document.location.href.indexOf('/app') != -1) {
                    document.app = new App();
                    document.app.init();
                }
                
            });
        </script>
    </body>

    @RenderSection("Scripts", required: false)
</body>
</html>
